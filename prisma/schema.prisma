generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int               @id @default(autoincrement())
  username    String            @unique
  name        String
  password    String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  ownProjects Project[]
  projects    UsersToProjects[]

  @@map("users")
}

model Locale {
  id           Int           @id @default(autoincrement())
  code         String        @unique
  countryCode  String        @default("us")
  name         String
  title        String
  translations Translation[]
  projects     Project[]

  @@map("locales")
}

model Project {
  id          Int               @id @default(autoincrement())
  ownerId     Int
  owner       User              @relation(fields: [ownerId], references: [id])
  users       UsersToProjects[]
  name        String
  url         String
  description String?
  namespaces  Namespace[]
  channels    Channel[]
  words       Word[]
  locales     Locale[]
  deletedAt   DateTime?
  apiKey      String            @default("")

  @@map("projects")
}

model UsersToProjects {
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
  userId    Int
  user      User    @relation(fields: [userId], references: [id])

  assignedById Int
  assignedAt   DateTime
  roleId       Int

  @@id([projectId, userId])
  @@map("usersToProjects")
}

model Namespace {
  id        Int       @id @default(autoincrement())
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  words     Word[]
  deletedAt DateTime?

  @@unique([projectId, name, deletedAt])
  @@map("namespaces")
}

model Channel {
  id           Int           @id @default(autoincrement())
  name         String
  project      Project       @relation(fields: [projectId], references: [id])
  projectId    Int
  translations Translation[]
  deletedAt    DateTime?

  @@unique([projectId, name, deletedAt])
  @@map("channels")
}

model Word {
  id          Int     @id @default(autoincrement())
  key         String
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int
  searchIndex String  @default("")

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deletedAt    DateTime?
  namespaces   Namespace[]
  translations Translation[]

  @@unique([projectId, key, deletedAt])
  @@map("words")
}

model Translation {
  id     Int    @id @default(autoincrement())
  word   Word   @relation(fields: [wordId], references: [id])
  wordId Int
  value  String

  locale   Locale @relation(fields: [localeId], references: [id])
  localeId Int

  // default / dev / production
  channel   Channel? @relation(fields: [channelId], references: [id])
  channelId Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  versions TranslationVersion[]

  @@unique([wordId, localeId, channelId])
  @@map("translations")
}

model TranslationVersion {
  id            Int         @id @default(autoincrement())
  translationId Int
  translation   Translation @relation(fields: [translationId], references: [id])
  data          String
  createdAt     DateTime    @default(now())

  @@map("translationVersions")
}
