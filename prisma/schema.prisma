generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Locale {
  id           Int           @id @default(autoincrement())
  code         String        @unique
  countryCode  String        @default("us")
  name         String
  title        String
  translations Translation[]
  projects     Project[]

  @@map("locales")
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  url         String
  description String?
  namespaces  Namespace[]
  channels    Channel[]
  keys        Key[]
  locales     Locale[]
  deletedAt   DateTime?
  apiKey      String      @default("")

  @@map("projects")
}

model Namespace {
  id        Int       @id @default(autoincrement())
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  keys      Key[]
  deletedAt DateTime?

  @@unique([projectId, name, deletedAt])
  @@map("namespaces")
}

model Channel {
  id           Int           @id @default(autoincrement())
  name         String
  project      Project       @relation(fields: [projectId], references: [id])
  projectId    Int
  translations Translation[]
  deletedAt    DateTime?

  @@unique([projectId, name, deletedAt])
  @@map("channels")
}

model Key {
  id          Int     @id @default(autoincrement())
  name        String
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int
  searchIndex String  @default("")

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deletedAt    DateTime?
  namespaces   Namespace[]
  translations Translation[]

  @@unique([projectId, name, deletedAt])
  @@map("keys")
}

model Translation {
  id    Int    @id @default(autoincrement())
  key   Key    @relation(fields: [keyId], references: [id])
  keyId Int
  value String

  locale   Locale @relation(fields: [localeId], references: [id])
  localeId Int

  // default / dev / production
  channel   Channel? @relation(fields: [channelId], references: [id])
  channelId Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  versions TranslationVersion[]

  @@unique([keyId, localeId, channelId])
  @@map("translations")
}

model TranslationVersion {
  id            Int         @id @default(autoincrement())
  translationId Int
  translation   Translation @relation(fields: [translationId], references: [id])
  data          String
  createdAt     DateTime    @default(now())

  @@map("translationVersions")
}
